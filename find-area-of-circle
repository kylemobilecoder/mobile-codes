<html>
  <head>
    <title>Find the area and circumference of a circle</title>
  </head>
  <body>
    <script language="JavaScript" type="text/javascript">
      function CalculateArea(){
        var radius = Number(document.form1.txtRadius.value);
        var area = radius * radius * Math.PI;
        document.form1.total.value = area;
        document.getElementById("total").innerHTML = area;
      }
    </script>
    <form name=form1>
      Enter the radius of circle:
      <input type="text" name="txtRadius">
      <br>
      Calculate <input type="button" value="Calculate" onClick="CalculateArea();">
      <br>
      <p>The area of the circle is: <input type = "text" name = "total"></p>
      
    </form>
  </body>
</html>
